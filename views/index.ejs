<%- include('layouts/header') %>

<div class="hero-section text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="display-4 mb-4">Start Your Business Journey Today</h1>
                <p class="lead mb-4">Professional Business Registration & Compliance Services</p>
            </div>
            <div class="col-md-5 desktop-form">
                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4">Get Started Now</h3>
                        <form id="enquiryForm">
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Your Name" required>
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="Email Address" required>
                            </div>
                            <div class="mb-3">
                                <input type="tel" class="form-control" placeholder="Phone Number" required>
                            </div>
                            <div class="mb-3">
                                <select class="form-select" required>
                                    <option value="">Select Service</option>
                                    <option value="private-limited">Private Limited Company</option>
                                    <option value="llp">LLP Registration</option>
                                    <option value="opc">One Person Company</option>
                                    <option value="partnership">Partnership Firm</option>
                                </select>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-warning btn-lg">Get Free Consultation</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sticky Form for Mobile -->
<div class="sticky-form-mobile">
    <form id="mobileEnquiryForm" class="row g-2">
        <div class="col-6">
            <input type="text" class="form-control form-control-sm" placeholder="Your Name" required>
        </div>
        <div class="col-6">
            <input type="tel" class="form-control form-control-sm" placeholder="Phone Number" required>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-warning btn-sm w-100">Get Free Consultation</button>
        </div>
    </form>
</div>

<div class="container my-5" id="services">
    <h2 class="text-center mb-5">Our Services</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card service-card h-100">
                <div class="card-body text-center">
                    <h3 class="card-title">Private Limited Company</h3>
                    <p class="card-text">Start your company with complete legal compliance and protection.</p>
                    <div class="price-tag mb-3">Starting at Rs.4,999/-</div>
                    <a href="/private-limited" class="btn btn-warning">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card service-card h-100">
                <div class="card-body text-center">
                    <h3 class="card-title">LLP Registration</h3>
                    <p class="card-text">Perfect balance of partnership flexibility and corporate structure.</p>
                    <div class="price-tag mb-3">Starting at Rs.6,999/-</div>
                    <a href="/llp" class="btn btn-warning">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card service-card h-100">
                <div class="card-body text-center">
                    <h3 class="card-title">Startup Registration</h3>
                    <p class="card-text">Get DPIIT recognition and access government benefits.</p>
                    <div class="price-tag mb-3">Starting at Rs.3,999/-</div>
                    <a href="/startup-registration" class="btn btn-warning">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2>Why Choose ITRwala?</h2>
                <ul class="feature-list list-unstyled">
                    <li>Expert Guidance from Chartered Accountants</li>
                    <li>End-to-End Support with Dedicated Manager</li>
                    <li>Competitive Pricing with No Hidden Costs</li>
                    <li>Quick Turnaround Time</li>
                    <li>100% Online Process</li>
                </ul>
                <a href="#contact" class="btn btn-warning cta-button mt-3">Contact Us</a>
            </div>
            <div class="col-md-6">
                <img src="/images/why_to_choose.png" alt="Why Choose Us" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<%- include('layouts/footer') %>