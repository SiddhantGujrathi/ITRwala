</style>


<div class="hero-section text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-7 ">
                <h1 class="display-4 mb-4">Start Your Business Journey Today</h1>
                <p class="lead mb-4">Professional Business Registration & Compliance Services</p>
            </div>
            <div class="col-md-5 desktop-form">
                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4">Get Started Now</h3>
                        <form id="enquiryForm">
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Your Name" required>
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="Email Address" required>
                            </div>
                            <div class="mb-3">
                                <input type="tel" class="form-control" placeholder="Phone Number" required>
                            </div>
                            <div class="mb-3">
                                <select class="form-select" required>
                                    <option value="">Select Service</option>
                                    <option value="private-limited">Private Limited Company</option>
                                    <option value="llp">LLP Registration</option>
                                    <option value="opc">One Person Company</option>
                                    <option value="partnership">Partnership Firm</option>
                                </select>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-warning btn-lg">Get Free Consultation</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

