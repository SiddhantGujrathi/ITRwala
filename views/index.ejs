<%- include('layouts/header') %>

<style>
    /* Custom Styling */
    .nav-pills .nav-link {
        font-weight: bold;
        color: black;
    }

    .nav-pills .nav-link.active {
        border-bottom: 2px solid #004cd2;
        color: #004cd2 !important;
        background: none;
    }

    .service-card {
        transition: transform 0.3s ease-in-out;
    }

    .service-card:hover {
        transform: translateY(-5px);
