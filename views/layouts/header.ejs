    <!-- Sticky Form for Mobile -->
    <div class="sticky-form-mobile" id="stickyForm">
        <form id="mobileEnquiryForm" class="row g-2">
            <div class="col-6">
                <input type="text" class="form-control form-control-sm" placeholder="Your Name" required>
            </div>
            <div class="col-6">
                <input type="tel" class="form-control form-control-sm" placeholder="Phone Number" required>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-warning btn-sm w-100">Get Free Consultation</button>
            </div>
        </form>
    </div>

    <script>
        let lastScrollTop = 0;
        const navbar = document.getElementById('mainNav');
        const stickyForm = document.getElementById('stickyForm');

        window.addEventListener('scroll', () => {
            let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

            if (window.innerWidth <= 768) { // Only for mobile devices
                if (scrollTop > lastScrollTop && scrollTop > 100) {
                    // Scrolling down
                    navbar.classList.add('hide');
                    stickyForm.classList.add('show');
                } else {
                    // Scrolling up
                    navbar.classList.remove('hide');
                    stickyForm.classList.remove('show');
                }
            }

            lastScrollTop = scrollTop;
        });
    </script>